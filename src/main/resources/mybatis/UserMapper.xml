<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.teardowall.mapper.UserMapper">
	
	<resultMap id="userMap" type="com.teardowall.models.User">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="email" property="email"/>
		<result column="email_active" property="emailActive"/>
		<result column="nick_name" property="nickName"/>
		<result column="phone_number" property="phoneNumber"/>
		<result column="password" property="password"/>
		<result column="salt" property="salt"/>
		<result column="city_name" property="cityName"/>
		<result column="county_name" property="countyName"/>
		<result column="longitude" property="longitude"/>
		<result column="latitude" property="latitude"/>
		<result column="ip" property="ip"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
	</resultMap>
	
	<sql id="userColumns">
		name, email, email_active, nick_name, phone_number, password, salt, city_name, longitude, latitude, ip, created_at, updated_at
	</sql>
	
	<select id="findUserByEmail" parameterType="string" resultMap="userMap">
		select id, <include refid="userColumns"/> from users where email = #{email} limit 1
	</select>
	
	<select id="findUserById" parameterType="string" resultMap="userMap">
		select id, <include refid="userColumns"/> from users where id = #{id}
	</select>
	
	<insert id="addUser" parameterType="com.teardowall.models.User">
		insert into users (<include refid="userColumns"/>) values (#{name}, #{email}, #{emailActive}, #{nickName}, #{phoneNumber}, #{password}, #{salt}, #{cityName}, #{longitude}, #{latitude}, #{ip}, #{createdAt}, #{updatedAt})
	</insert>
	
	<update id="updateUser" parameterType="com.teardowall.models.User">
		update users set name = #{name}, email = #{email}, email_active = #{emailActive}, nick_name = #{nickName}, phone_number = #{phoneNumber}, password = #{password}, salt = #{salt}, city_name = #{cityName}, county_name = #{countyName}, longitude = #{longitude}, latitude = #{latitude}, ip = #{ip}, created_at = #{createdAt}, updated_at = #{updatedAt} where id = #{id}
	</update>
	
</mapper>